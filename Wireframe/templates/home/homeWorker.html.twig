
    {% extends 'base.html.twig' %}


{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    .no-notifs {
        font-style: italic;
        color: #888;
        text-align: center;
        margin-top: 2em;
    }
    #notifications {
        max-width: 600px;
        margin: 0 auto;
    }
    
    .notification {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #f9f9f9;
        transition: transform 0.3s ease;
        position: relative;
    }
    
    .notification.closed {
        transform: translateX(100%);
        opacity: 0;
    }
    
    .close-btn {
        background: none;
        border: none;
        font-size: 16px;
        cursor: pointer;
    }
    
    .close-btn:focus {
        outline: none;
    }

</style>

<div class="example-wrapper">

    <h3><b>Notifications</b></h3>

   {% if notifications|length == 0 %}
    <p class="no-notifs">All notifications are read</p>
   {% else %}
    {% for notification in notifications %}
        <div class="notification {% if notification.isClosed %} closed {% endif %}" data-id="{{ notification.id }}">
            <p>{{ notification.message }}</p>
            <form  method="post">
                <input type="hidden" name="isClosed" value="true">
                <button type="submit" class="close-btn" aria-label="Close">âœ–</button>
            </form>
        </div>
    {% endfor %}
   {% endif %}
  
</div>
{% endblock %}
