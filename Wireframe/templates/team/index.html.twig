{% extends 'base.html.twig' %}

{% block title %}TeamController{% endblock %}

{% block body %}

<style>
    .example-wrapper {
        margin: 2em auto;
        max-width: 1200px;
        width: 95%;
        font-family: 'Arial', sans-serif;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 2em;
    }
    
    th, td {
        padding: 0.75em;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
    
    th {
        background-color: #f4f4f4;
        font-size: 16px;
        color: #333;
    }
    
    tr:hover {
        background-color: rgba(100, 100, 100, 0.05);
    }
    
    .no-teams, .no-members {
        font-style: italic;
        color: #888;
        text-align: center;
        margin-top: 2em;
    }

    .addMember {
        margin-top: 1em;
        padding: 0.5em 1em;
        font-size: 14px;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .addMember:hover {
        background-color: #0056b3;
    }

    #anchor{
        text-decoration: none;
        color: inherit;
    }

    .table-header {
        display: flex; 
        align-items: center;
        margin-bottom: 20px; 
    }
    
    .icon-wrapper {
        display: inline-flex;
        margin-left: 930px; 
        text-decoration: none;
        color: inherit;
    }
    
    .icon {
        display: inline-flex;
        width: 40px; 
        height: 44px;
        background-color: #007bff;
        color: #fff; 
        border-radius: 50%;
        text-align: center; 
        line-height: 44px; 
        font-size: 50px; 
        padding-left: 8px;
        font-weight: bold; 
        cursor: pointer; 
    }
    
    .icon:hover {
        background-color: #0056b3; 
    }
</style>

<div class="example-wrapper">
    <div class="table-header">
        <h1>Teams</h1>
        <a href="{{ path('app_team_create') }}" class="icon-wrapper">
            <span class="icon">+</span>
        </a>
    </div>

    {% if teamsLeaders is not empty %}
        <table>
            <thead>
                <tr>
                    <th>Team Name</th>
                    <th>Number of People in Team</th>
                    <th>Team Leader</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for team in teamsLeaders %}
                    {% for leadteam in team %}
                        <tr>
                            <td><a id="anchor" href="{{ path('app_team_members', {'teamId': leadteam.getTeam().getId()}) }}">{{ leadteam.getTeam().getName() }}</a></td>
                            <td>{{ leadteam.getTeam().getMembers()|length }}</td>
                            <td>{{ leadteam.getTeamLead().getUsername() }}</td>
                            <td>
                                <form method="get" action="{{ path('app_team_delete') }}">
                                    <input type="hidden" name="teamId" value="{{ leadteam.getTeam().getId() }}" />
                                    <button type="submit">Remove</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p class="no-teams">No teams available</p>
    {% endif %}
</div>

{% endblock %}
