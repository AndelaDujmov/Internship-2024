{% extends 'base.html.twig' %}

{% block title %}Annual Leaves{% endblock %}

{% block body %}

<style>
    .example-wrapper {
        margin: 2em auto;
        max-width: 1200px;
        width: 95%;
        font-family: 'Arial', sans-serif;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 2em;
    }
    
    th, td {
        padding: 0.75em;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
    
    th {
        background-color: #f4f4f4;
        font-size: 16px;
        color: #333;
    }
    
    tr:hover {
        background-color: rgba(100, 100, 100, 0.05);
    }
    
    .no-teams, .no-members {
        font-style: italic;
        color: #888;
        text-align: center;
        margin-top: 2em;
    }

    .addMember {
        margin-top: 1em;
        padding: 0.5em 1em;
        font-size: 14px;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .addMember:hover {
        background-color: #0056b3;
    }

    #anchor{
        text-decoration: none;
        color: inherit;
    }

    .table-header {
        display: flex; 
        align-items: center;
        margin-bottom: 20px; 
    }
    
    .icon-wrapper {
        display: inline-flex;
        margin-left: 930px; 
        text-decoration: none;
        color: inherit;
    }
    
    .icon {
        display: inline-flex;
        width: 40px; 
        height: 44px;
        background-color: #007bff;
        color: #fff; 
        border-radius: 50%;
        text-align: center; 
        line-height: 44px; 
        font-size: 50px; 
        padding-left: 8px;
        font-weight: bold; 
        cursor: pointer; 
    }
    
    .icon:hover {
        background-color: #0056b3; 
    }
</style>

<div class="example-wrapper">
    <div class="table-header">
        <h1>Annual Leaves</h1>
    </div>
    {% if requests|length > 0 %}
        <table>
            <thead>
                <tr>
                    <th>Period</th>
                    <th>Reason</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for request in requests %}
                
                    <tr>
                        <td>{{ request.getStart() | date('Y-m-d H:i') }} - {{ request.getEnd() | date('Y-m-d H:i') }}</td>
                        <td>{{ request.getReason() }}</td>
                        <td>{{ request.getStatus() }}</td>
                        <td>
                        {% if 'ROLE_WORKER' in app.user.roles %}
                            <form method="get">
                                <input type="hidden" name="teamId" />
                                <button type="submit">Cancel</button>
                            </form>
                        {% endif %}
                        {% if 'ROLE_ADMIN' in app.user.roles or 'ROLE_TEAMLEADER' in app.user.roles or 'ROLE_PROJECTLEADER' in app.user.roles %}
                            <form method="post" >
                                <input type="hidden" name="_method" value="DELETE" />
                                <button type="submit">Approve</button>
                            </form>
                        {% endif %}
                        </td>
                    
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    
    {% else %}
        <p class="no-teams">No teams available</p>
    {% endif %}
</div>

{% endblock %}